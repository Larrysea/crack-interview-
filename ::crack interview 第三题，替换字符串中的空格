 
 //替换字符串中的空格
 public String replaceSpace(String iniString, int length) {
      StringBuilder sb = new StringBuilder();
        for (int i = 0; i < iniString.length(); i++) {
            if (iniString.substring(i, i + 1).equals(" ")) {
                sb.append("%20");
            } else {
                sb.append(iniString.charAt(i));
            }

        }
        return sb.toString();
 }